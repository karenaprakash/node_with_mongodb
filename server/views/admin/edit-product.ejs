<%- include('../components/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">

</head>
<body>
        <%- include('../components/navigation.ejs') %>

        <main>
            <form class="product-form" action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
                <div class="form-control">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" value="<% if(editing) { %> <%= product.name %> <% } %>" >
                </div>
                <div class="form-control">
                    <label for="imageUrl">Image</label>
                    <input type="text" name="imageUrl" id="imageUrl" value="<% if(editing) { %> <%= product.imageUrl %> <% } %>" >
                </div>
                <div class="form-control">
                    <label for="price">Price</label> 
                    <input type="number" step="0.01" name="price" id="price" value="<% if(editing) { %><%= product.price %><% } %>" >
                </div>
                <div class="form-control">
                    <label for="description">Description</label>
                    <textarea rows="5" name="description" id="description" > <% if(editing) { %> <%= product.description %> <% } %>  </textarea>
                </div>
                <% if(editing) { %>
                   <input type="hidden" name="productId" value="<%= product._id %>"> 
                <% } %>
                <button type="submit"> <% if(editing) { %> Update Product <% } else { %> Add Product <% } %> </button>
            </form>
        </main>
    
<%- include('../components/end.ejs') %>